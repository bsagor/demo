<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sa.com.medisys.rufaida">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    ;
    <application
        android:allowBackup="true"
        android:icon="@drawable/rufaida"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.UserSelectionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.WelcomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.login.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activity.RufaidaMenuActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.appointment.AppointmentMenuActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.LogoutActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.appointment.SearchAppointmentActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.appointment.NewAppointmentStep1Activity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.appointment.NewAppointmentStep2Activity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.laboratory.LabOrderActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".activity.radiology.RadiologyOrderActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"></activity>
    </application>

</manifest>